!!!
%html{lang: 'en'}
  %head
    %title== Ratings Summary: #{@title} 
    = bootstrap_assets
    = css :application
    = js :app
  
  %body
    %div.page-header
      %h1== #{@title}

    - container :fluid do
      %section#overview
        %h3 Overview
        -row do
          %div.col-xs-12
          %dl{class: 'dl-horizontal'}
            %dt.total-ratings Number of ratings
            %dd.total-ratings --
  
            %dt.average-score Average score
            %dd.average-score --
  
            %dt.median-score Median score
            %dd.median-score --
  
            %dt.unique-styles Unique styles
            %dd.unique-styles --

    -container :fluid do
      %section#statistics
        %h3 Score distributions
        -row do
          %div{id: 'scoreDistribution', class: 'col-sm-12'}
        %div{id: 'scoreDistributionCharts'}
          -row do
            %div{id: 'aromaDistribution', class: 'col-md-6'}
            %div{id: 'appearanceDistribution', class: 'col-md-6'}
          - row do
            %div{id: 'flavorDistribution', class: 'col-md-6'}
            %div{id: 'palateDistribution', class: 'col-md-6'}
          -row do
            %div{id: 'overallDistribution', class: 'col-md-6'}

    :javascript
      $(document).ready(function() {
        initializeRatings('#{@callback}');
      });

